
<% @posts.each do |post| %>
  <div id="forumpost">
  <h1><%=h post.title %></h1>
  <p><%=h post.message %></p>
  <p><% if post.photo? %>
  <%=h image_tag post.photo.url%> <%end%></p>
  <%= link_to "Comments", post_comments_path(post)%>    Posted by: <%=h post.author%>
  </div>
<% end %>


<br />

<%= will_paginate @posts %>  <%= link_to "New post", new_post_path %> 
