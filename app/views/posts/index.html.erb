<h1>Listing posts</h1>
<table>
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Message</th>
    <th>Author</th>
		<th>Tags</th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%=h post.id %></td>
    <td><%=h post.title %></td>
    <td><%=h post.message %></td>
    <td><%=h post.author %></td>
    <td><%=h post.tags%></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', new_post_path %>

