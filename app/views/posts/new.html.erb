<h1>New post</h1>

<% form_for @post, :html => {:multipart => true } do |f| %>
  <%= f.error_messages %>


  <p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
  </p>
  <p>
  <%= f.label :message %><br />
  <%= f.text_area :message, :class => "mceEditor" %>
  </p>

  <p>
  <%= f.label :tag_list%>
  <%= f.text_field :tag_list, :size => 40%>
  <p>
	<%= f.label "Upload Photo" %>
  <%= f.file_field :photo %>
  <p>
  <%= f.hidden_field :user_id, :value => current_user.id%>
  </p>

  <p>

  <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', posts_path %>
